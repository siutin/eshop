{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "inventory": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "price": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "is_published": {
      "type": "boolean"
    },
    "shop_id": {
      "type": "number"
    },
    "tags": {
      "type": [
        "string"
      ]
    },
    "image": {
      "type": "buffer"
    }
  },
  "validations": [],
  "relations": {
    "shop": {
      "type": "belongsTo",
      "model": "Shop",
      "foreignKey": "shop_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
       "accessType": "WRITE",
       "principalType": "ROLE",
       "principalId": "$owner",
       "permission": "ALLOW"
     }
  ],
  "methods": {}
}
